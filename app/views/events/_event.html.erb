<div id="<%= dom_id event %>" class="p-6 shadow-md rounded-md bg-white flex flex-col">
  <h2 class="line-clamp-2	text-xl font-bold mb-2 text-slate-700">
    <%= link_to event_path(event) do %>
      <%= event.name %>
    <% end %>
  </h2>
  <p class="text-sm text-slate-700 font-semibold flex gap-1 items-center">
    <%= event.date.strftime("%A, %d %B %Y, %I:%M %p") %>
  </p>
  <p class="text-sm line-clamp-1 text-slate-700 mb-1 flex gap-1 items-center">
    <%= event.location %>
  </p>
  <p class="line-clamp-1 text-sm text-slate-500 font-semibold mt-auto">
    <%= event.creator.email %>
  </p>
</div>