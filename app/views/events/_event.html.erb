<div id="<%= dom_id event %>" class="bg-white shadow-md rounded-lg p-6">
  <h1 class="text-2xl font-bold mb-2"><%= event.name %></h1>
  <p class="text-gray-600 mb-4">
    <%= event.date.strftime("%A, %d %B %Y, %I:%M%p") %>
  </p>
  <p class="text-gray-600 mb-4">
    <%= event.location %>
  </p>
  <p class="text-gray-700">
    <%= event.description %>
  </p>
</div>
