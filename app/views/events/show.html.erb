<%= render "event", event: @event %>

<%= link_to "Edit", edit_event_path(@event), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
<%= link_to "Back to Events", events_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
<%= button_to "Delete", event_path(@event), method: :delete, data: { confirm: "Are you sure you want to delete this event?" }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
