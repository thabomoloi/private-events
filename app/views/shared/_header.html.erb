<header class="bg-white shadow p-4 sm:px-8 md:px-16 flex gap-4 justify-between items-center">
    <%= link_to root_path do %>
        <span class="text-2xl font-extrabold">superevents</span>
    <% end %>
    <div class="flex gap-8 font-medium items-center">
        <%= link_to 'Events', events_url %>
        <% if user_signed_in? %>
            <%= link_to 'Sign out', destroy_user_session_path, data: { turbo_method: :delete } %>
        <% else %>
            <%= link_to 'Sign in', new_user_session_path %>
            <%= link_to 'Get Started', new_user_registration_path, class: "bg-blue-800 hover:bg-blue-900 font-medium text-sm text-white py-2 px-4 rounded" %>
        <% end %>
    </div>
</header>
