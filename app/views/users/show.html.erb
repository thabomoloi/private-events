<div class="mb-4">
    <h2 class="text-2xl font-bold text-slate-800">Your Attended Events</h2>
    <p class="font-semibold text-slate-600"><%= current_user.name %></p>
</div>  
<div class="mb-2 flex justify-between items-center">
    <h2 class="text-lg font-bold text-slate-700">Upcoming</h2>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 gap-4 lg:grid-cols-3 my-4">
    <% @upcoming_events.each do | event | %>
        <%= render event %>
    <% end %>  
</div>

<% unless @past_events.size.zero? %>
    <div class="mb-2 mt-8 flex justify-between items-center ">
        <h2 class="text-lg font-bold text-slate-700">Past</h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 lg:grid-cols-3 my-4">
        <% @past_events.each do | event | %>
            <%= render event %>
        <% end %>  
    </div>

<% end%>

<% if @upcoming_events.size.zero? && @past_events.size.zero? %>
    <p class="text-lg text-slate-700 text-center mt-8">It looks like  you haven't attended any events yet.</p>
<% end %>