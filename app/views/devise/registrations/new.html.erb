<div class="max-w-md mx-auto bg-white shadow-md rounded-lg overflow-hidden mt-10">
  <div class="p-6">
    <h2 class="text-2xl font-bold mb-4 text-center">Sign up for new account</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, class: "block text-slate-800" %>
        <%= f.email_field :email, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="mb-4">
        <%= f.label :name, class: "block text-slate-800" %>
        <%= f.text_field :name, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", autofocus: true %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "text-slate-700" do %>
          Password 
          <% if @minimum_password_length  %>
            <em class="text-sm text-slate-500">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        <% end %>
        <%= f.password_field :password, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", autocomplete: "new-password" %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: "block text-slate-800" %>
        <%= f.password_field :password_confirmation, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", autocomplete: "new-password" %>
      </div>

      <div class="flex items-center justify-between">
        <%= f.submit "Sign up", class: "w-full bg-blue-800 text-white py-2 px-4 rounded-md hover:bg-blue-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
      </div>
    <% end %>

    <div class="mt-6">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
